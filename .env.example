# RedactX Configuration
# Copy this file to .env and customize

# Server settings
REDACTX_HOST=0.0.0.0
REDACTX_PORT=8000
REDACTX_LOG_LEVEL=info
REDACTX_DEBUG=false

# Model settings
# Default to lightweight model for fast startup
REDACTX_DEFAULT_MODEL=openmed/OpenMed-PII-ClinicalE5-Small-33M-v1
REDACTX_MODEL_CACHE_DIR=/tmp/redactx/models
REDACTX_DEVICE=auto

# Processing settings
REDACTX_MAX_FILE_SIZE_MB=50
REDACTX_MAX_BATCH_SIZE=100
REDACTX_DEFAULT_CONFIDENCE=0.6
REDACTX_DEFAULT_METHOD=mask
REDACTX_USE_SMART_MERGING=true

# Security
REDACTX_CORS_ORIGINS=*
# REDACTX_API_KEY=your-secret-key  # Uncomment to enable API key auth
